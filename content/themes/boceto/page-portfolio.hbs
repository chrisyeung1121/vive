{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<main class="content" role="main">

	<div class="page single">
	
		<article class="{{post_class}}">
			{{! Everything inside the #post tags pulls data from the post }}
			{{#post}}
				
				<header>
					<div class="main-image"></div>
					<h2>{{{title}}}</h2>
					<div class="meta"></div>
				</header>
				
				<section class="post-content">
					<!-- start: .articles-->
						<div class="articles loading" style="padding: 20px;">
							{{#foreach posts columns=3}}
							
								<article class="item opacity0 {{post_class}} {{#if @rowEnd}}ep-last{{/if}}">
									<div class="main-image">
										{{content characters="0"}}
									</div>
									<div class="overlay">
										<p class="tags">
											<span>{{tags}}</span>
										</p>
										<a href="{{url}}" class="readmore"><i class="fa fa-arrows-alt"></i></a>
										<header>
											<h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
											<time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
										</header>
									</div>
									<div class="clear"></div>
								</article>
								
							{{/foreach}}
							<div class="clear"></div>
						</div>
						<!-- end: .articles -->
				</section>
	
			{{/post}}
	
		</article>
		
		<div class="border">
			<div class="decoration"></div>
		</div>
		
		<div class="pagination">
			<div class="nav">
				<a class="older-posts" href="{{@blog.url}}"><i class="fa fa-chevron-left"></i> RETURN TO HOME</a>
			</div>
		</div>
		
	</div>

</main>
