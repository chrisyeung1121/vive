{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">
	{{! Everything inside the #post tags pulls data from the post }}
	{{#post}}
		<!-- start: .single -->
		<div class="single">
			
			<article class="{{post_class}}">
					
				<header>
					<div class="main-image"></div>
					<h2>{{title}}</h2>
					<div class="meta">
						Published in <time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time>
						{{#if tags}}
								~ Tags:
								<span>{{tags}}</span>
						{{/if}}
					</div>
					
				</header>
				
				<section class="post-content">
					{{content}}
				</section>
		
			</article>
			{{#author}}
				{{#if bio}}
					<!-- start: .author -->
					<section class="author box {{#if image}}with-avatar{{else}}no-avatar{{/if}}">
						<div class="border"></div>
						<h3 class="title">ABOUT THE AUTHOR</h3>
						{{#if image}}
							<div class="avatar"><a href="{{url}}"><img src="{{image}}"></a></div>
						{{/if}}
						<h4><a href="{{url}}">{{name}}</a></h4>
						<p>{{bio}}</p>
						{{#if website}}
							<p>Follow me in <a href="{{website}}">{{website}}</a></p>
						{{/if}}
						<div class="clear"></div>
					</section>
					<!-- end: .author -->		
				{{/if}}	
			{{/author}}	
			
			<!-- start: .comments -->
			<section class="comments box">
				<div class="border"></div>
				<h3 class="title">COMMENTS</h3>
			
				<!-- start: disqus integration -->
				<div id="disqus_thread"></div>
				<script type="text/javascript">
					/* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
					var disqus_shortname = 'ghost-nuevo'; // required: replace example with your forum shortname
			
					/* * * DON'T EDIT BELOW THIS LINE * * */
					(function() {
						var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
						dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
						(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					})();
				</script>
				<!-- end: disqus integration -->
			
			</section>
			<!-- end: .comments -->		
			
			<div class="border">
				<div class="decoration"></div>
			</div>
			
			<div class="pagination">
				<div class="nav">
					<a class="older-posts" href="{{@blog.url}}"><i class="fa fa-chevron-left"></i> RETURN TO HOME</a>
				</div>
			</div>
			
			<div class="clear"></div>
			
		</div>
		<!-- end: .single -->
	{{/post}}
</main>